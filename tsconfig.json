{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "./node_modules",
    "**/__mocks__/*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths" : {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true
  }
}