{
  "name": "socktrader",
  "version": "1.0.0",
  "description": "Websocket based trading bot for cryptocurrencies",
  "main": "src/index.ts",
  "repository": "https://github.com/SockTrader/SockTrader",
  "scripts": {
    "test": "jest --coverage --ci --forceExit",
    "backtest": "npm run build && node ./build/backtest.js",
    "normalize": "npm run build && node ./build/sockTrader/data/normalize.js",
    "web-dev": "cross-env NODE_ENV=dev nodemon -e ts --exec \"npm run build && node ./build/sockTrader/web/webServer.js\"",
    "web": "npm run build && concurrently -c \"bgBlue.bold,bgBlack.bold\" -n webserver,compiler \"node ./build/sockTrader/web/webServer.js\" \"tsc -w\"",
    "build": "tsc",
    "build-es5": "tsc --target \"ES5\"",
    "docs": "esdoc",
    "lint": "tslint --fix --project ./",
    "pre-commit": "echo 'Pre-commit checks..' && exit 0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "pre-commit": [
    "pre-commit",
    "lint"
  ],
  "authors": [
    "wouter cleymans",
    "thijs raets"
  ],
  "engines": {
    "node": ">=10.14.2"
  },
  "license": "GPL-3.0",
  "nodemonConfig": {
    "ignore": [
      "logs/*"
    ],
    "delay": "2500"
  },
  "esdoc": {
    "source": "./src/core",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-typescript-plugin",
        "option": {
          "enable": true
        }
      },
      {
        "name": "esdoc-standard-plugin",
        "option": {
          "brand": {
            "logo": "./docs/SockTraderLogo.png",
            "title": "SockTrader",
            "description": "Websocket based trading bot for cryptocurrencies",
            "repository": "https://github.com/SockTrader/SockTrader",
            "site": "https://socktrader.github.io/SockTrader/"
          },
          "test": {
            "source": "./src/tests",
            "interfaces": [
              "describe",
              "it",
              "context",
              "suite",
              "test"
            ],
            "includes": [
              "(spec|Spec|test|Test)\\.ts$"
            ],
            "excludes": [
              "\\.config\\.ts$"
            ]
          }
        }
      },
      {
        "name": "esdoc-node"
      },
      {
        "name": "esdoc-ecmascript-proposal-plugin",
        "option": {
          "all": true
        }
      }
    ]
  },
  "dependencies": {
    "boom": "^7.3.0",
    "chokidar": "^2.1.2",
    "cors": "^2.8.5",
    "cron": "^1.6.0",
    "cron-parser": "^2.7.3",
    "data-forge": "^1.3.3",
    "data-forge-fs": "0.0.3",
    "data-forge-plot": "^0.1.11",
    "decimal.js-light": "^2.5.0",
    "express": "^4.16.4",
    "fs-extra": "^7.0.1",
    "lodash.reverse": "^4.0.1",
    "lodash.sortby": "^4.7.0",
    "lodash.uniqby": "^4.7.0",
    "lodash.uniqwith": "^4.5.0",
    "moment": "^2.24.0",
    "nanoid": "^2.0.1",
    "nanoid-dictionary": "^2.0.0",
    "numeral": "^2.0.6",
    "socket.io": "^2.2.0",
    "technicalindicators": "^2.0.7",
    "typescript": "^3.3.3",
    "websocket": "^1.0.28",
    "winston": "^3.2.1",
    "yargs": "^13.2.1"
  },
  "devDependencies": {
    "@types/boom": "^7.2.1",
    "@types/chai": "^4.1.7",
    "@types/chokidar": "^1.7.5",
    "@types/cors": "^2.8.4",
    "@types/cron": "^1.6.0",
    "@types/express": "^4.16.1",
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.6",
    "@types/lodash.reverse": "^4.0.5",
    "@types/lodash.sortby": "^4.7.5",
    "@types/lodash.uniqby": "^4.7.5",
    "@types/lodash.uniqwith": "^4.5.5",
    "@types/nanoid": "^1.2.0",
    "@types/node": "^11.9.4",
    "@types/numeral": "0.0.25",
    "@types/sinon": "^7.0.6",
    "@types/socket.io": "^2.1.2",
    "@types/websocket": "0.0.40",
    "@types/yargs": "^12.0.9",
    "chai": "^4.2.0",
    "codecov": "^3.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-node": "^1.0.4",
    "esdoc-standard-plugin": "^1.0.0",
    "esdoc-typescript-plugin": "^1.0.1",
    "jest": "^24.1.0",
    "pre-commit": "^1.2.2",
    "sinon": "^7.2.4",
    "source-map-support": "^0.5.10",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1"
  }
}
