{
  "name": "socktrader",
  "version": "1.0.0",
  "description": "Websocket based trading bot for cryptocurrencies",
  "main": "src/index.ts",
  "repository": "https://github.com/SockTrader/SockTrader",
  "license": "GPL-3.0",
  "authors": [
    "wouter cleymans",
    "thijs raets"
  ],
  "engines": {
    "node": ">=12.13.1"
  },
  "scripts": {
    "stryker": "stryker run",
    "test": "jest  --ci --maxWorkers=2 --coverage",
    "backtest": "npm run build && node ./build/index.js backtest",
    "normalize": "npm run build && node ./build/index.js normalize",
    "web-dev": "cross-env NODE_ENV=dev nodemon -e ts --exec \"npm run build && node ./build/index.js web\"",
    "web": "npm run build && concurrently -c \"bgBlue.bold,bgBlack.bold\" -n webserver,compiler \"node ./build/index.js web\" \"tsc -w\"",
    "build": "tsc",
    "lint": "tslint --fix --project ./",
    "socktrader": "npm run build && node ./build/index.js",
    "pre-commit": "echo 'Pre-commit checks..' && exit 0"
  },
  "jest-junit": {
    "outputDirectory": "test_results/jest"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "coverageDirectory": "test_results/coverage",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts",
      "!<rootDir>/src/data/*.ts",
      "!<rootDir>/src/__fixtures__/*.ts",
      "!<rootDir>/src/strategies/**/*"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "pre-commit": [
    "pre-commit",
    "lint"
  ],
  "nodemonConfig": {
    "ignore": [
      "logs/*"
    ],
    "delay": "2500"
  },
  "dependencies": {
    "@types/boom": "^7.3.0",
    "@types/chokidar": "^2.1.3",
    "@types/cors": "^2.8.6",
    "@types/cron": "^1.7.1",
    "@types/express": "^4.17.2",
    "@types/fs-extra": "^8.0.1",
    "@types/inquirer": "^6.5.0",
    "@types/jest": "^24.9.0",
    "@types/lodash.reverse": "^4.0.6",
    "@types/lodash.sortby": "^4.7.6",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^13.1.8",
    "@types/sinon": "^7.5.1",
    "@types/socket.io": "^2.1.4",
    "@types/ws": "^7.2.0",
    "@types/yargs": "^15.0.0",
    "boom": "^7.3.0",
    "chokidar": "^3.3.1",
    "cors": "^2.8.5",
    "cron": "^1.7.2",
    "cron-parser": "^2.13.0",
    "data-forge": "^1.7.7",
    "data-forge-fs": "0.0.7",
    "decimal.js-light": "^2.5.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "inquirer": "^7.0.3",
    "lodash.reverse": "^4.0.1",
    "lodash.sortby": "^4.7.0",
    "moment": "^2.24.0",
    "nanoid": "^2.1.9",
    "nanoid-dictionary": "^3.0.0",
    "ora": "^4.0.3",
    "socket.io": "^2.3.0",
    "source-map-support": "^0.5.16",
    "technicalindicators": "^3.0.0",
    "typescript": "^3.7.5",
    "winston": "^3.2.1",
    "ws": "^7.2.1",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^2.5.0",
    "@stryker-mutator/html-reporter": "^2.5.0",
    "@stryker-mutator/jest-runner": "^2.5.0",
    "@stryker-mutator/typescript": "^2.5.0",
    "codecov": "^3.6.1",
    "concurrently": "^5.0.2",
    "cross-env": "^6.0.3",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "pre-commit": "^1.2.2",
    "sinon": "^8.1.0",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1"
  }
}
