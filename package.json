{
  "name": "socktrader",
  "version": "1.0.0",
  "description": "Websocket based trading bot for cryptocurrencies",
  "main": "src/index.ts",
  "repository": "woutercleymans/SockTrader",
  "scripts": {
    "pretest": "tsc -p tsconfig.spec.json",
    "test": "cross-env NODE_ENV=test mocha --require source-map-support/register build/tests/**/*.spec.js",
    "dev-test": "cross-env NODE_ENV=test nodemon -e ts --exec \"npm test\"",
    "dev": "cross-env NODE_ENV=dev nodemon -e ts --exec \"npm run compile\"",
    "compile": "tsc && node ./build/index.js",
    "docs": "esdoc"
  },
  "authors": [
    "wouter cleymans"
  ],
  "license": "GPL-3.0",
  "nodemonConfig": {
    "ignore": [
      "logs/*"
    ],
    "delay": "2500"
  },
  "esdoc": {
    "source": "./src",
    "destination": "./docs",
    "plugins": [
      {
        "name": "esdoc-standard-plugin"
      },
      {
        "name": "esdoc-node"
      },
      {
        "name": "esdoc-ecmascript-proposal-plugin",
        "option": {
          "all": true
        }
      }
    ]
  },
  "dependencies": {
    "cron": "^1.4.1",
    "cron-parser": "^2.6.0",
    "decimal.js-light": "^2.4.1",
    "lodash.reverse": "^4.0.1",
    "lodash.sortby": "^4.7.0",
    "lodash.uniqby": "^4.7.0",
    "lodash.uniqwith": "^4.5.0",
    "mkdirp": "^0.5.1",
    "moment": "^2.22.2",
    "nanoid": "^1.2.5",
    "nanoid-dictionary": "^1.0.1",
    "numeral": "^2.0.6",
    "typescript": "^3.1.1",
    "websocket": "^1.0.28",
    "winston": "^3.1.0",
    "winston-logzio": "^1.0.8"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/cron": "^1.3.0",
    "@types/lodash.reverse": "^4.0.4",
    "@types/lodash.sortby": "^4.7.4",
    "@types/lodash.uniqby": "^4.7.4",
    "@types/lodash.uniqwith": "^4.5.4",
    "@types/mkdirp": "^0.5.2",
    "@types/mocha": "^5.2.5",
    "@types/nanoid": "^1.2.0",
    "@types/numeral": "0.0.25",
    "@types/sinon": "^5.0.2",
    "@types/websocket": "0.0.40",
    "chai": "^4.2.0",
    "cross-env": "^5.2.0",
    "esdoc": "^1.1.0",
    "esdoc-ecmascript-proposal-plugin": "^1.0.0",
    "esdoc-node": "^1.0.3",
    "esdoc-standard-plugin": "^1.0.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "sinon": "^6.3.4",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "ts-sinon": "^1.0.12",
    "tslint": "^5.11.0"
  }
}
