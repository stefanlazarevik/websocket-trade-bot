{
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules",
    "**/__mocks__/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths" : {
      "nanoid-dictionary": ["src/types/nanoidDictionary.d.ts"]
    },
    "lib": ["es6"],
    "types": ["node"],
    "target": "es6",
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./build",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": false
  }
}